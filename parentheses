#include <stdio.h>
#include <string>
#include <iostream>
#include <stack>

using namespace std;

int main(){
	stack <int> st;
	int n;
	int a[200017];

	scanf("%d", &n);

	for(int i=0;i<n;i++){
		string s;
		cin >> s;
		for(int j=0;j<s.size();j++){
			if(s[j] == '('){ //''는 char ""는 string
				st.push(1);
			}
			else if(s[j] == ')'){
				if(st.empty()){
					st.push(0);
				}
				else if(not st.empty() && st.top()!=0){
					st.pop();
				}
			}
			else{
				continue;
			}
		}
		if(st.empty()){
			a[i]=1;
		}
		else{
			a[i]=0;
		}
		while(not st.empty()){
			st.pop();
		}
	}
	for(int i=0;i<n;i++){
		if(a[i]==1){
			printf("YES\n");
		}
		else{
			printf("NO\n");
		}
	}
	return 0;
}
