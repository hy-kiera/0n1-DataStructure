#include <cstdio>
#include <algorithm>
#include <queue>

using namespace std;

int mat[501][501];  //	[y좌표][x좌표]
int m, n, ans1, ans2, sum;
int dir[4][2]={{1,0},{-1,0},{0,1},{0,-1}};  //하 상 우 좌

void dfs(int y, int x){
	for(int i=0;i<4;i++){
		int yy=y+dir[i][0], xx=x+dir[i][1];
		if(yy<0 || yy>=n || xx<0 || xx>=m) continue;
		if(mat[yy][xx]==1){
			mat[yy][xx]=0;
			sum++;
			dfs(yy,xx);
		}
	}
}

int bfs(int sy, int sx){
	int ret=0;
	queue <pair<int, int> > q;
	q.push(make_pair(sy,sx));
	mat[sy][sx]=0;
	ret++;
	while(!q.empty()){
		int y=q.front().first, x=q.front().second;
		q.pop();
		for(int i=0;i<4;i++){
			int yy=y+dir[i][0], xx=x+dir[i][1];
			if(yy<0 || yy>=n || xx<0 || xx>=m) continue;
			if(mat[yy][xx]==1){
				q.push(make_pair(yy,xx));
				mat[yy][xx]=0;
				ret++;
			}
		}
	}
	return ret;
}

int main(){
	scanf("%d %d",&n,&m);

	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			scanf("%d",&mat[i][j]);
		}
	}
	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			if(mat[i][j]==1){

				ans1++;
				sum=0;
				mat[i][j]=0;
				sum++;
				dfs(i,j);
				ans2=max(sum, ans2);

				// ans1++;
				// ans2=max(ans2,bfs(i,j));
			}
		}
	}
	printf("%d\n%d\n", ans1, ans2);

	return 0;
}
